// EN UN CAMPEONATO DE FUTBOL PARTICIPAN N EQUIPOS. ELABORA UN PROGRAMA
//QUE TE ARROJE CUANTOS PARTIDOS HABRA EN LA PRIMERA RUEDA DEL CAMPEONATO 

Proceso PRIMERA_RUEDA
	
	DEFINIR EQUIPOS, PARTIDOS COMO ENTEROS; 
	
	ESCRIBIR "BIENVENIDO AL PROGRAMA DE CALCULO DE PARTIDOS EN LA PRIMERA RUEDA"; 
	ESCRIBIR "INGRESA CUANTOS EQUIPOS SE REGISTRARON EN ESTE CAMPEONATO"; 
	LEER EQUIPOS; 
	
	PARTIDOS<-EQUIPOS/2;
	
	ESCRIBIR "EN ESTA PRIMERA RUEDA HABRAN ", PARTIDOS , " PARTIDOS"; 
	
FinProceso
