
#include<iostream>
using namespace std;


int main() {
	int a;
	int b;
	int c;
	int medio;
	cout << "Este programa te indica cual es el intermedio de 3 numeros" << endl;
	cout << "Ingrese tres numeros por favor" << endl;
	cin >> a >> b >> c;
	if (a<b && b<c) {
		medio = b;
	}
	if (b<c && c<a) {
		medio = c;
	}
	if (c<a && b<a) {
		medio = a;
	}
	if (c<b && b<a) {
		medio = b;
	}
	if (a<c && c<b) {
		medio = c;
	}
	if (b<a && a<c) {
		medio = a;
	}
	cout << "El valor intermedio es: " << medio << endl;
	return 0;
}

