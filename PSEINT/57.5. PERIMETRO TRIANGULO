// CALCULE EL PERIMETRO DE UN TRIANGULO RECTANGULO 

Proceso PERIMETRO_TRIANGULO
	
	DEFINIR BASE, ALTURA, HIPOTENUSA, PERIMETRO COMO REALES; 
	
	ESCRIBIR "BIENVENIDO AL PROGRAMA DE CALCULO DE PERIMETRO"; 
	ESCRIBIR "ESTE PROGRAMA FUNCIONA CON TRIANGULOS RECTANGULOS"; 
	
	ESCRIBIR "POR FAVOR INGRESE LA BASE"; 
	LEER BASE; 
	
	ESCRIBIR "POR FAVOR INGRESE LA ALTURA"; 
	LEER ALTURA; 
	
	ESCRIBIR "POR FAVOR INGRESE LA HIPOTENUSA"; 
	LEER HIPOTENUSA; 
	
	PERIMETRO<- BASE+ALTURA+HIPOTENUSA; 
	
	ESCRIBIR "EL PERIMETRO DE ESTE TRIANGULO ES: ", PERIMETRO; 
	
FinProceso
